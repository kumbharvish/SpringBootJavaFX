<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<BorderPane styleClass="rootNode" stylesheets="@../../../css/reports.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.billing.controller.InvoiceWiseProfitReportController">
	<top>
		<VBox alignment="TOP_CENTER" spacing="20.0" BorderPane.alignment="CENTER">
			<children>
				<Label fx:id="heading" text="Invoice Wise Profit Report" />
				<AnchorPane>
					<children>
						<GridPane hgap="10.0" vgap="10.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
							<columnConstraints>
								<ColumnConstraints fillWidth="false" hgrow="NEVER" minWidth="50.0" />
								<ColumnConstraints fillWidth="false" hgrow="NEVER" minWidth="10.0" />
								<ColumnConstraints fillWidth="false" hgrow="NEVER" minWidth="50.0" />
								<ColumnConstraints fillWidth="false" hgrow="NEVER" minWidth="10.0" />
							</columnConstraints>
							<rowConstraints>
								<RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
							</rowConstraints>
							<children>
								<Label styleClass="nodeLabel" text="From :" GridPane.halignment="RIGHT" />
								<DatePicker fx:id="dpFromDate" GridPane.columnIndex="1" />
								<DatePicker fx:id="dpToDate" GridPane.columnIndex="3" />
								<Label styleClass="nodeLabel" text="To :" GridPane.columnIndex="2" GridPane.halignment="RIGHT" />
							</children>
						</GridPane>
					</children>
				</AnchorPane>
			</children>
			<padding>
				<Insets bottom="20.0" />
			</padding>
		</VBox>
	</top>
	<center>
		<BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
			<center>
				<TableView fx:id="tableView" BorderPane.alignment="CENTER">
					<columns>
						<TableColumn fx:id="tcInvoiceNo" prefWidth="190.0" text="Invoice No."/>
						<TableColumn fx:id="tcInvoiceDate" prefWidth="90.0" text="Invoice Date"/>
						<TableColumn fx:id="tcNoOfItems" prefWidth="100.0" text="No Of Items"/>
						<TableColumn fx:id="tcQuantity" prefWidth="130.0" text="Quantity">
						<cellValueFactory>
								<PropertyValueFactory property="totalQuantity" />
							</cellValueFactory>
						</TableColumn>
                  <TableColumn fx:id="tcInvoiceAmount" prefWidth="130.0" text="Invoice Amount">
                     <cellValueFactory>
                        <PropertyValueFactory property="netSalesAmt" />
                     </cellValueFactory>
                  </TableColumn>
                  <TableColumn fx:id="tcProfitAmount" prefWidth="130.0" text="Profit Amount">
                     <cellValueFactory>
                        <PropertyValueFactory property="profitAmount" />
                     </cellValueFactory>
                  </TableColumn>
					</columns>
					<placeholder>
						<Label fx:id="placeholderText" text="&lt; No data found &gt;" />
					</placeholder>
					<columnResizePolicy>
						<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
					</columnResizePolicy>
				</TableView>
			</center>
			<bottom>
            <AnchorPane BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets top="10.0" />
               </BorderPane.margin>
               <children>
      				<GridPane hgap="5.0" vgap="10.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
      					<columnConstraints>
      						<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
      						<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
      					</columnConstraints>
      				</GridPane>
               </children>
            </AnchorPane>
			</bottom>
		</BorderPane>
	</center>
	<bottom>
		<ButtonBar BorderPane.alignment="CENTER">
			<buttons>
				<Button fx:id="btnClose" cancelButton="true" mnemonicParsing="false" onAction="#onCloseAction" text="Close" />
			</buttons>
			<padding>
				<Insets top="10.0" />
			</padding>
		</ButtonBar>
	</bottom>
</BorderPane>
